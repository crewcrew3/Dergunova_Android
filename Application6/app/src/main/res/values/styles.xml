<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenTitleStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBorderlessStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/borderless_btn_color</item>
    </style>

    <style name="ButtonFilledStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RecyclerViewSongNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecyclerViewSongAuthorTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/song_author_color</item>
    </style>

    <style name="RecyclerViewSongYearTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/song_year_color</item>
    </style>

</resources>